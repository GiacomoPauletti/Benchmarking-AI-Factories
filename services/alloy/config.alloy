livedebugging {
  enabled = true
}

local.file_match "local_files" {
    path_targets = [
        {"__path__" = "/logs/server.log*", "job" = "server", "hostname" = constants.hostname},
        {"__path__" = "/logs/orchestrator_job-*.out", "job" = "orchestrator-stdout", "hostname" = constants.hostname},
        {"__path__" = "/logs/orchestrator_job-*.err", "job" = "orchestrator-stderr", "hostname" = constants.hostname},
        {"__path__" = "/logs/loadgen*", "job" = "client-loadgen", "hostname" = constants.hostname},
        {"__path__" = "/logs/vllm*.out", "job" = "slurm-stdout", "hostname" = constants.hostname},
        {"__path__" = "/logs/vllm*.err", "job" = "slurm-stderr", "hostname" = constants.hostname},
        {"__path__" = "/logs/vllm*.log", "job" = "vllm-log", "hostname" = constants.hostname},
    ]
    sync_period  = "5s"
}
 
loki.source.file "log_scrape" {
    targets    = local.file_match.local_files.targets
    forward_to = [loki.write.local.receiver]
    tail_from_end = true
}

loki.write "local" {
  endpoint {
    url = "http://loki:3100/loki/api/v1/push"
  }
}