{
  "datasource": {
    "type": "prometheus",
    "uid": "prom"
  },
  "fieldConfig": {
    "defaults": {
      "custom": {
        "fillOpacity": 70,
        "hideFrom": {
          "legend": false,
          "tooltip": false,
          "viz": false
        },
        "insertNulls": false,
        "lineWidth": 0,
        "spanNulls": 60000
      },
      "mappings": [
        {
          "options": {
            "0": {
              "color": "super-light-blue",
              "index": 0,
              "text": "Pending..."
            },
            "1": {
              "color": "blue",
              "index": 1,
              "text": "Starting..."
            },
            "2": {
              "color": "green",
              "index": 2,
              "text": "Running"
            },
            "3": {
              "color": "dark-green",
              "index": 3,
              "text": "Completed"
            },
            "4": {
              "color": "dark-red",
              "index": 4,
              "text": "Failed !"
            },
            "5": {
              "color": "transparent",
              "index": 5,
              "text": ""
            },
            "6": {
              "color": "transparent",
              "index": 6,
              "text": ""
            }
          },
          "type": "value"
        }
      ]
    },
    "overrides": []
  },
  "gridPos": {
    "h": 6,
    "w": 24,
    "x": 0,
    "y": 0
  },
  "id": 1,
  "options": {
    "alignValue": "left",
    "legend": {
      "displayMode": "list",
      "placement": "bottom",
      "showLegend": true
    },
    "mergeValues": true,
    "rowHeight": 1.2,
    "showValue": "always",
    "tooltip": {
      "mode": "single",
      "sort": "none"
    }
  },
  "pluginVersion": "12.3.0",
  "targets": [
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prom"
      },
      "editorMode": "code",
      "expr": "service_status_info{service_id=\"$service\", replica_id!=\"aggregate\"}",
      "instant": false,
      "legendFormat": "{{replica_id}}",
      "range": true,
      "refId": "A"
    }
  ],
  "title": "Status",
  "type": "state-timeline"
}
